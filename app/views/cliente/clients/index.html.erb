<h1>Clientes</h1></br>
<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
<thead>
    <tr>
    <th style="text-align:center;">Nombre</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @clients.each do |client| %>
  <tr>
    <td style="text-align:center;"><%= client.nombre %></td>
	<% if @id == client.usuario_id %>
    <td width="75"><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_cliente_client_path(client), :class => 'btn btn-info' %></td>
		<% else %>
	<td></td>
		<% end %>
  </tr>
<% end %>
</tbody>

</table>

<br />


