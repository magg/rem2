<%= form_for([:admin, @project],:html => { :class => "form-horizontal"}) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
		<h2><%= t('errors.template.header', :count=>@project.errors.size,
		:model=>t('activerecord.models.project')) %>.</h2> <p><%= t('errors.template.body') %></p>
      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br />
<div class="control-group">
    <%= f.label :nombre, :class=>"control-label" %>
   <div class="controls">
    <%= f.text_field :nombre %>
  </div>
</div>
  <div class="control-group">
    <%= f.label :descripcion, :class=>"control-label" %>
   <div class="controls">
    <%= f.text_area :descripcion, :rows => 6 %>
  </div>
</div>
<div class="control-group">
    <%= f.label :periodo, :class=>"control-label" %>
   <div class="controls">
    <% var = "Ene-May " + Time.now.year.to_s %>
    <% var2 = "Ago-Dic " + Time.now.year.to_s %>
    <%= f.select :periodo, options_for_select([[var, var], [var2, var2]])  %>
  </div>
</div>
<div class="form-actions">
<%= link_to 'Cancelar'.html_safe, admin_projects_path, :class => 'btn btn-danger' %>
<%= link_to_function "Guardar",
"javascript:document.getElementById(\"new_project\").submit(); return
false",:class => 'btn btn-primary' %>
  </div>
<% end %>
