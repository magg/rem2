<h1>Proyectos</h1><br />
<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
<thead>
  <tr>
    <th style="text-align:center;">Nombre</th>
    <th style="text-align:center;">Descripción</th>
    <th style="text-align:center;">Cliente</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @projects.each do |project| %>
  <tr>
    <td style="text-align:center;"><%= link_to project.nombre, [:admin, project]  %></td>
    <td style="text-align:center;"><%= project.descripcion %></td>
	<% if project.client_id != nil %>
    <td style="text-align:center;"><%= project.client_id %></td>
	<% else  %>
	<td style="text-align:center;"></td>
	<% end  %>
	
    

     <td width="75"><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_admin_project_path(project), :class => 'btn btn-info' %></td>
    <td width="87"><%= link_to '<i class="icon-trash icon-white"></i> Eliminar'.html_safe, admin_project_path(project), confirm: "¿Desea eliminar: #{project.nombre}?", method: :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to '<i class="icon-pencil icon-white"></i> Agregar Proyectos'.html_safe, new_admin_project_path, :class => 'btn btn-info' %>
