<h1>Estudiantes</h1></br>
<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
<thead>
  <tr>
    <th style="text-align:center;">Nombre</th>
    <th style="text-align:center;">Rol</th>
    <th style="text-align:center;">Usuario</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @students.each do |student| %>
  <tr>
    <td style="text-align:center;"><%= student.nombre + " " + student.appat + " " + student.apmat %></td>
    <td style="text-align:center;"><%= student.rol %></td>
    <td style="text-align:center;"><%= student.usuario.username %></td>
     <td ><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_admin_student_path(student), :class => 'btn btn-info' %></td>
    <td ><%= link_to '<i class="icon-trash icon-white"></i> Eliminar'.html_safe, admin_student_path(student), confirm: "Â¿Desea eliminar: #{student.nombre}?", method: :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</tbody>

</table>

