<h1>Clientes</h1></br>
<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
<thead>
    <tr>
    <th style="text-align:center;">Nombre</th>
    <th style="text-align:center;">Usuario</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @clients.each do |client| %>
  <tr>
    <td style="text-align:center;"><%=  client.nombre + " " + client.appat + " " + client.apmat %></td>
    <td style="text-align:center;"><%= client.usuario.username %></td>
    <td width="75"><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_admin_client_path(client), :class => 'btn btn-info' %></td>
    <td width="87"><%= link_to '<i class="icon-trash icon-white"></i> Eliminar'.html_safe, admin_client_path(client), confirm: "Â¿Desea eliminar: #{client.nombre}?", method: :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</tbody>
</table>

