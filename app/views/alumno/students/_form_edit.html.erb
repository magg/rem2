<%= form_for([:alumno, @student],:html => { :class => "form-horizontal"}) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count=>@students.errors.size,
        :model=>t('activerecord.models.student')) %>.</h2>
      <p><%= t('errors.template.body') %></p>
      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
<br />
  <div class="control-group">
    <%= f.label :nombre, :class=>"control-label" %>
   <div class="controls">
    <%= f.text_field :nombre %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :rol, :class=>"control-label"  %>
   <div class="controls">
    <%= f.text_field :rol %>
  </div>
  </div>
<%= f.fields_for :usuario do |ef| %>
  <div class="control-group">
    <%= ef.label :Usuario, :class=>"control-label" %>
   <div class="controls">
    <%= ef.text_field :username %>
  </div>
</div>
  <div class="control-group">
    <%= ef.label :password, :class=>"control-label" %>
   <div class="controls">
    <%= ef.password_field :password %>
  </div>
</div>
  <div class="control-group">
    <%= ef.label :password_confirmation, :class=>"control-label" %>
   <div class="controls">
    <%= ef.password_field :password_confirmation %>
  </div>
</div>
<%- end %>
<div class="form-actions">
<%= link_to 'Cancelar'.html_safe, alumno_students_path, :class => 'btn btn-danger' %>
<%= link_to_function "Guardar",
"javascript:document.getElementById(\"edit_student_#{@student.id}\").submit(); return
false",:class => 'btn btn-primary' %>
  </div>
<% end %>
