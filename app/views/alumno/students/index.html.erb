<h1>Estudiantes</h1></br>
<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
<thead>
  <tr>
    <th style="text-align:center;">Nombre</th>
    <th style="text-align:center;">Rol</th>
    <th style="text-align:center;">Usuario</th>
    <th ></th>
  </tr>
</thead>
<tbody>
<% @students.each do |student| %>
  <tr>
    <td style="text-align:center;"><%= student.nombre %></td>
    <td style="text-align:center;"><%= student.rol %></td>
    <td style="text-align:center;"><%= student.usuario.username %></td>
	<% if @id == student.usuario_id %>
     <td width="75"><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_alumno_student_path(student), :class => 'btn btn-info' %></td>
	<% else %>
<td></td>
	<% end %>

  </tr>
<% end %>
</tbody>

</table>

<br />


