<%= form_for([:alumno, @sprint],:html => { :class => "form-horizontal"} ) do |f|%>
  <% if @sprint.errors.any? %>
    <div id="error_explanation">
		<h2><%= t('errors.template.header', :count=>@sprint.errors.size,
		:model=>t('activerecord.models.sprint')) %>.</h2> <p><%= t('errors.template.body') %></p>
      <ul>
      <% @sprint.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</br>
  <div class="control-group">
    <%= f.label :comentario , :class=>"control-label" %>
   <div class="controls">
    <%= f.text_field :comentario %>
   </div>
   </div>

  <div class="control-group">
    <%= f.label :fechainicio, :class=>"control-label" %>
   <div class="controls">

    <%= f.date_select :fechainicio %>
  </div>
</div>

  <div class="control-group">
    <%= f.label :fechafin, :class=>"control-label" %>
   <div class="controls">
    <%= f.date_select :fechafin %>
  </div>
</div>


 <div class="form-actions">
<%= link_to 'Cancelar'.html_safe, alumno_sprints_path, :class => 'btn btn-danger' %>
<%= link_to_function "Guardar",
"javascript:document.getElementById(\"edit_sprint_#{@sprint.id}\").submit(); return
false",:class => 'btn btn-primary' %>
  </div>

<% end %>
