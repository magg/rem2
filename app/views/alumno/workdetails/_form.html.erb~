        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :task_id %><br />
    <%= f.number_field :task_id %>
  </div>
  <div class="field">
    <%= f.label :hrstrabajadas %><br />
    <%= f.number_field :hrstrabajadas %>
  </div>
  <div class="field">
    <%= f.label :hrsporterminar %><br />
    <%= f.number_field :hrsporterminar %>
  </div>
  <div class="form-actions">
