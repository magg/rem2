<h1 align="center">PRODUCT BACKLOG</h1>
</br>
<table class="table table-striped table-bordered table-condensed" style="table-layout:fixed;word-wrap:break-word;">
<thead>
  <tr>
    <th style="text-align:center;">Nombre</th>
    <th style="text-align:center;">Descripción</th>
    <th style="text-align:center;">Usuario</th>
    <th style="text-align:center;">Prioridad</th>
    <th style="text-align:center;">Puntos función</th>
    <th style="text-align:center;">Estatus</th>
    <th style="text-align:center;width:100px;">Comentarios</th>
    <th></th>
    <th style="width:97px;"></th>
  </tr>
</thead>
<tbody>
<% @stories.each do |story| %>
  <tr>
    <td><%= link_to story.name, [:alumno, story]  %></td>
    <td><%= story.descripcion %></td>
    <td style="text-align:center;"><%= story.usuario %></td>
    <td style="text-align:center;"><%= story.prioridad %></td>
    <td style="text-align:center;"><%= story.functionpts %></td>
    <td style="text-align:center;"><%= Status.where(:id => story.status_id).first.descripcion %></td>
    <td><%= story.comentarios %></td>
    <td><%= link_to '<i class="icon-edit icon-white"></i> Editar'.html_safe, edit_alumno_story_path(story), :class => 'btn btn-info' %></td>
    <td><%= link_to '<i class="icon-trash icon-white"></i> Eliminar'.html_safe, alumno_story_path(story), confirm: "¿Desea eliminar: #{story.name}?", method: :delete, :class => 'btn btn-danger' %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to '<i class="icon-pencil icon-white"></i> Agregar Story'.html_safe, new_alumno_story_path, :class => 'btn btn-info' %>
