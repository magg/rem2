<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do %>

 <div class="control-group">
   <%= label_tag :email %>
   <div class="controls">
    <%= text_field_tag :email, params[:email] %>
  </div>
</div>
  <div class="actions"><%= submit_tag "Reset Password",:class => 'btn btn-primary' %></div>
<% end %>

